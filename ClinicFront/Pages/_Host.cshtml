                        slidesPerView: 1,
                    },
                    870: {
                        slidesPerView: 2,
                    },
                    1236: {
                        slidesPerView: 3,
                    },
                },
            });
        };

        swiper.startAutoplay.start(); // Start autoplay

        swiper.on('slideChange', function () {
            if (swiper.isEnd) {
                setTimeout(function () {
                    swiper.slideToLoop(0); // Go back to the first slide after a delay
                    swiper.startAutoplay.start(); // Restart autoplay
                }, 1000);
            }
        });
    </script>
